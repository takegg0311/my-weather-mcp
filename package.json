{
  "name": "my-weather-mcp",
  "version": "0.1.0",
  "description": "A simple MCP server for weather data",
  "private": true,
  "type": "module",
  "bin": {
    "my-weather-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"import('fs').then(fs => fs.default.chmodSync('build/index.js', '755'))\"",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@types/node": "^20.11.24",
    "axios": "^1.9.0",
    "node-fetch": "^2.7.0",
    "typescript": "^5.3.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.12",
    "ts-node": "^10.9.2"
  }
}
